# Bolts configurations

# Phishing bolt configuration
phishing-bolt:
    lists:
        subjects: 
            generic: /path/to/generic_subjects
            custom: /path/to/custom_subjects
        
        targets:
            generic: /path/to/generic_targets
            custom: /path/to/custom_targets


# Attachments bolt configuration
attachments-bolt:
    tika:
        enabled: True
        server_endpoint: http://localhost:9998

    virustotal:
        enabled: True
        api_key: xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx


# Urls handler body
urls_handler_body-bolt:
    whitelists:
        alexa:
            path: /path/to/alexa
            expiry: 2016-06-28T12:33:00.000Z # date ISO 8601 only UTC
        test1:
            path: /path/to/alexa
            expiry:
        test2:
            path: /path/to/alexa


# Output debug bolt configuration
output-debug-bolt:
    json.indent: 4
    output.path: /path/to/output


# Output debug bolt configuration
output-redis-bolt:
    servers:
        hosts: ["localhost:6379", "locahost:6380"]
        shuffle_hosts: True
        port: 6379
        db: 0
        password:
        reconnect_interval: 1
        max_retry: 60
        flush_size: 50
        queue_name: spamscope
